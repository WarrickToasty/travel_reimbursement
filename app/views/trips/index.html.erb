<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<table>
  <thead>
    <tr>
      <th>Multi page</th>
      <th>Sap number</th>
      <th>Contact person</th>
      <th>Purpose</th>
      <th>Place</th>
      <th>Meeting time</th>
      <th>Meeting date</th>
      <th>Begin time</th>
      <th>End time</th>
      <th>Begin date</th>
      <th>End date</th>
      <th>Accompanied by</th>
      <th>Travel estimate</th>
      <th>Food estimate</th>
      <th>Lodging estimate</th>
      <th>Fee estimate</th>
      <th>Conference fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.multi_page %></td>
        <td><%= trip.sap_number %></td>
        <td><%= trip.contact_person %></td>
        <td><%= trip.purpose %></td>
        <td><%= trip.place %></td>
        <td><%= trip.meeting_time %></td>
        <td><%= trip.meeting_date %></td>
        <td><%= trip.begin_time %></td>
        <td><%= trip.end_time %></td>
        <td><%= trip.begin_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.accompanied_by %></td>
        <td><%= trip.travel_estimate %></td>
        <td><%= trip.food_estimate %></td>
        <td><%= trip.lodging_estimate %></td>
        <td><%= trip.fee_estimate %></td>
        <td><%= trip.conference_fee %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

