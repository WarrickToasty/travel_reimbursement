<div class="form-profile col-md-offset-2 col-md-8 well">

<% @employee.trips.sort { |a,b| b.begin_date <=> a.begin_date }.each do |trip| %>

    <table class="table">
      <tr>
        <th>Trip number</th>
        <th>Begin Date</th>
        <th>End Date</th>
        <th>Description</th>
      </tr>
      <tr>
        <td><%= trip.trip_number %></td>
        <td><%= trip.begin_date %></td>
        <td>$<%= trip.end_date %></td>
        <td><%= trip.purpose %></td>
      </tr>
    </table>

    <br>
<% end %>
</div>